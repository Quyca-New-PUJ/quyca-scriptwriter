<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.macros.MacroRecordFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/audio_label"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/sound_label"
            android:layout_weight="3"
            />

        <EditText
            android:id="@+id/audio_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:autofillHints="@string/sound_label" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/record_button"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:background="@null"
            android:button="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:src="@drawable/ic_baseline_mic_24"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/rec_label" />

        <ImageButton
            android:id="@+id/play_button"
            android:layout_height="match_parent"
            android:background="@null"
            android:singleLine="true"
            android:button="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:src="@drawable/ic_baseline_play_arrow_24"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/rec_label" />
    </LinearLayout>

        <Button
            android:id="@+id/disc_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/disc_label" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/save_act_label" />

    </LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.macros.MacroHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/prev_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="@string/prev_macro_label" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/movement_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/blue"
                android:text="@string/movement_toggle_label"
                android:textOn="@string/movement_toggle_label"
                android:textOff="@string/movement_toggle_label"
                />
            <ToggleButton
                android:id="@+id/record_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/record_toggle_label"
                android:textOn="@string/record_toggle_label"
                android:background="@color/red"
                android:textOff="@string/record_toggle_label" />
            <ToggleButton
                android:id="@+id/screen_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/screen_toggle_label"
                android:textOn="@string/screen_toggle_label"
                android:background="@color/green"
                android:textOff="@string/screen_toggle_label" />
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/actionFragmentContainer"
            android:layout_width="match_parent"
            android:layout_weight="17"
            android:layout_height="0dp" />
    </LinearLayout>

</FrameLayout>

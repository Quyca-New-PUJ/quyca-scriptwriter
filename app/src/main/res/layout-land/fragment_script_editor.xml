<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scripteditor.ScriptEditorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/new_macro"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:autoSizeTextType="uniform"
            android:background="@null"
            android:text="@string/create_macro" />

        <TextView
            android:id="@+id/time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emotion_name_label" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/macro_aux_label"
            android:ems="10"
            android:inputType="text"
            android:text="" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/script_editor_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>